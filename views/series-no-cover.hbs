{{>header}}
	<div id="middle">
		<div id="series-ncov-wrap">
			<div id="series-ncov-content">
				<div id="series-ncov-hd">
					<div id="series-ncov-meta">
						{{series.series_type}}
						{{#if series.series_episodes_total}}
							with {{series.series_episodes_total}} {{inflect series.series_episodes_total "episode" "episodes"}}
						{{/if}}
						{{#if series.series_episodes_duration}}
							&times; {{series.series_episodes_duration}} min.
						{{/if}}
					</div>
					<div id="series-ncov-title">
						<span id="series-ncov-title-main">{{series.series_title_main}}</span>
					</div>
					<div id="series-ncov-alt-titles">
						{{#if series.series_title_english}}
							{{capitalizeFirst series.series_title_english}}
						{{/if}}
						{{#if series.series_title_japanese}}
							{{#if series.series_title_english}}
								<span id="series-ncov-sep"></span>
							{{/if}}
							{{series.series_title_japanese}}
						{{/if}}
					</div>
				</div>
				<div id="series-ncov-info-wrap">
					{{>series_info}}
				</div>
			</div>
		</div>
	</div>
{{>footer}}